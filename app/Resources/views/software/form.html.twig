{% extends 'layout.html.twig' %}

{% form_theme formulario 'form/form_row.html.twig' %}

{% block title %}Software{% endblock %}

{% block content %}
    <div class="col-sm-9 col-sm-offset-3">
        <h1>{{ software.id ? 'Datos del software' : 'Nuevo software' }}</h1>
    </div>

    {{ form_start(formulario, {'attr': {'novalidate': 'novalidate'}}) }}
    {{ form_widget(formulario) }}

    <div class="form-group row">
        <div class="col-sm-9 col-sm-offset-3">
            <p>* Los campos marcados son obligatorios</p>
            {# Lo dejo por si consigo solucionar mi problema #}
            {% if empresa is defined and empresa is not null %}
            <a href="{{ path('empresa_servicios_mostrar', {'id': empresa.id}) }}" class="btn btn-primary"><i class="fa fa-arrow-left"></i> Volver al listado de servicios de la empresa</a>
            {% else %}
                <a href="{{ path('software_listar') }}" class="btn btn-primary"><i class="fa fa-arrow-left"></i> Volver al listado de softwares</a>
            {% endif %}
            {% if software.id and is_granted('SOFTWARE_EDITAR', software) %}
            <button type="submit" class="btn btn-success">Guardar cambios</button>
            {% endif %}
            {% if software.id and is_granted('SOFTWARE_ELIMINAR', software) %}
                <a href="{{ path('software_eliminar', {'id': software.id}) }}" class="btn btn-danger"><i class="fa fa-trash"></i> Eliminar</a>
            {% endif %}
        </div>
    </div>
    {{ form_end(formulario) }}

{% endblock %}