{% extends 'tipo_dispositivo/listar.html.twig' %}

{% block section %}
    {#<h1>{{ software.id ? 'Datos del software ' software.nombre : 'Nuevo software' }}</h1>#}
    {% if tipoDispositivo.id %}
        <h3>Datos del tipo de dispositivo</h3>
    {% else %}
        <h3>Nuevo tipo de dispositivo</h3>
    {% endif %}
    {# Pendiente solucionar el tema del encabezado #}

    {{ form_start(formulario) }}
    {{ form_widget(formulario) }}

    <div class="form-group row">
        <div class="col-sm-2"></div>
        <div class="col-sm-10">
            <p>* Los campos marcados son obligatorios</p>
            {# Lo dejo por si consigo solucionar mi problema #}
            {% if empresa is defined and empresa is not null %}
            <a href="{{ path('empresa_servicios_mostrar', {'id': empresa.id}) }}" class="btn btn-primary"><i class="fa fa-arrow-left"></i> Volver al listado de servicios de la empresa</a>
            {% endif %}

            <button type="submit" class="btn btn-success">Guardar cambios</button>
            {% if tipoDispositivo.id %}
                <a href="{{ path('tipo_dispositivo_eliminar', {'id': tipoDispositivo.id}) }}" class="btn btn-danger"><i class="fa fa-trash"></i> Eliminar</a>
            {% endif %}
        </div>
    </div>
    {{ form_end(formulario) }}

{% endblock %}