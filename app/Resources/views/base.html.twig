<!DOCTYPE html>
<html lang="es">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="apple-touch-icon" sizes="180x180" href="{{ asset('apple-touch-icon.png') }}">
        <link rel="icon" type="image/png" sizes="32x32" href="{{ asset('favicon-32x32.png') }}">
        <link rel="icon" type="image/png" sizes="16x16" href="{{ asset('favicon-16x16.png') }}">
        <link rel="manifest" href="{{ asset('site.webmanifest') }}">
        <link rel="mask-icon" href="{{ asset('safari-pinned-tab.svg') }}" color="#5bbad5">
        <meta name="msapplication-TileColor" content="#00585e">
        <meta name="theme-color" content="#ffffff">
        <title>{% block title %}{% endblock %}</title>

        <!-- Bootstrap -->
        <link href="{{ asset('fontawesome/css/fontawesome-all.css') }}" rel="stylesheet">
        <link href="{{ asset('bs337/css/estilos.css') }}" rel="stylesheet">
        <link href="{{ asset('select2/dist/css/select2.min.css') }}" rel="stylesheet">
        <link href="{{ asset('select2-bootstrap-theme/dist/select2-bootstrap.min.css') }}" rel="stylesheet">
        <link href="{{ asset('datatables/css/dataTables.bootstrap.css') }}" rel="stylesheet" >


        <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
        <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
        <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
        <![endif]-->
    </head>
    <body>
        {% block body %}{% endblock %}
        {% block javascripts %}
            <!-- Optional JavaScript -->
            <!-- jQuery first, then Popper.js, then Bootstrap JS -->
            <script src="{{ asset('bs337/jquery/jquery.min.js') }}"></script>
            <script src="{{ asset('bs337/js/bootstrap.min.js') }}"></script>
            <script src="{{ asset('select2/dist/js/select2.js') }}"></script>
            <script src="{{ asset('select2/dist/js/i18n/es.js') }}"></script>
            <!-- JS DataTables -->
            <script src="{{ asset('datatables/js/jquery.dataTables.js') }}"></script>
            <script src="{{ asset('datatables/js/dataTables.bootstrap.js') }}"></script>
            <script src="{{ asset('js/main.js') }}"></script>
        {% endblock %}
    </body>
</html>
