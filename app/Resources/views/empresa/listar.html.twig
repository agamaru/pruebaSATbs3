{% extends 'layout.html.twig' %}

{% block title %}Listado de empresas{% endblock %}

{% block content %}
    <div class="well encabezado">
        <h1>Listado de empresas</h1>
        <a href="{{ path('empresa_nueva') }}" class="btn btn-success"><i class="fa fa-plus"></i> Nueva empresa</a>
    </div>

    {% if empresas is not empty %}
    <table id="myTable" class="table table-bordered table-hover table-striped tablesorter-bootstrap">
        <thead>
            <tr>
                <th></th>
                <th>Nombre</th>
                <th>CIF</th>
                <th>Servicios</th>
            </tr>
        </thead>
        <tbody>
            {% for empresa in empresas %}
            <tr>
                <td><a href="{{ path('empresa_probar', {'id': empresa.id}) }}" title="Editar datos de la empresa" class="btn btn-primary"><i class="fas fa-pencil-alt"></i></a>
                    <a href="{{ path('empresa_eliminar', {'id': empresa.id}) }}" title="Eliminar" class="btn btn-danger"><i class="fa fa-trash"></i></a>
                </td>
                <td>{{ empresa.nombre }}</td>
                <td>{{ empresa.cif }}</td>
                <td><a href="{{ path('empresa_servicios_mostrar', {'id': empresa.id}) }}" title="Ver servicios contratados"><i class="far fa-eye"></i> </a></td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
    {% else %}
        <p>No hay empresas que mostrar</p>
    {% endif %}
{% endblock %}
