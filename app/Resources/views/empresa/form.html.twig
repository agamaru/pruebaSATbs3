{% extends 'layout.html.twig' %}

{% form_theme formulario 'form/form_row.html.twig' %}

{% block title %}Empresa{% endblock %}

{% block content %}
    <div class="col-sm-9 col-sm-offset-3">
        <h1>{{ empresa.id ? empresa.nombre : 'Nueva empresa' }}</h1>
    </div>

    {{ form_start(formulario) }}
    {{ form_widget(formulario) }}

    <div class="form-group row">
        <div class="col-sm-9 col-sm-offset-3">
            <p>* Los campos marcados son obligatorios</p>
            <div class="botonera">
                <a href="{{ path('empresa_listar') }}" class="btn btn-primary"><i class="fa fa-arrow-left"></i> Volver al listado</a>
                {% if is_granted('EMPRESA_EDITAR', empresa) %}
                <button type="submit" class="btn btn-success"><i class="fas fa-check"></i> Guardar cambios</button>
                {% endif %}
                {% if empresa.id and is_granted('EMPRESA_ELIMINAR', empresa)%}
                    <a href="{{ path('empresa_eliminar', {'id': empresa.id}) }}" class="btn btn-danger"><i class="fa fa-trash"></i> Eliminar</a>
                {% endif %}
            </div>
        </div>
    </div>
    {{ form_end(formulario) }}

{% endblock %}