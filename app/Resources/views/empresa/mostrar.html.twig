{% extends 'layout.html.twig' %}

{% block title %}Servicios{% endblock %}

{% block content %}
    <h1>Servicios de la empresa {{ empresa.nombre }} </h1>

    {% if softwares is not empty %}
        {% for software in softwares %}
            <p><strong>Nombre: </strong>{{ software.nombre }}</p>
            <p><strong>Tipo: </strong>{{ software.tipo }}</p>
            <p><strong>Fecha de renovaci√≥n: </strong>{{ software.fechaRenovacion|date('d/m/Y') }}</p>
        {% endfor %}
    {% else %}
        <p>No dispone de softwares instalados.</p>
    {% endif %}

    {% if confiRedes is not empty %}
        {% for confiRed in confiRedes %}
            <p><strong>Dominio: </strong>{{ confiRed.dominio }}</p>
        {% endfor %}
    {% else %}
        <p>No dispone de configuraciones de red.</p>
    {% endif %}

    {% if routers is not empty %}
        {% for router in routers %}
            <p><strong>IP del router: </strong>{{ router.ip }}</p>
        {% endfor %}
    {% else %}
        <p>No dispone de routers.</p>
    {% endif %}

    {% if servidores is not empty %}
        {% for servidor in servidores %}
            <p><strong>Nombre del servidor: </strong>{{ servidor.nombre }}</p>
        {% endfor %}
    {% else %}
        <p>No dispone de servidores.</p>
    {% endif %}
{% endblock %}
