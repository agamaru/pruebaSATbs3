{% extends 'layout.html.twig' %}

{% block title %}Configuraciones de red{% endblock %}

{% block content %}
    <div class="well encabezado">
        <h1>Listado de configuraciones de red</h1>
        {% if is_granted('CONFIRED_CREAR') %}
            <a href="{{ path('confired_nueva') }}" class="btn btn-success"><i class="fa fa-plus"></i> Nueva configuraci칩n de red</a>
        {% endif %}
    </div>

    {% if confiRedes is defined and confiRedes is not empty %}
    <table class="table table-bordered table-hover table-striped dt">
        <thead>
            <tr>
                <th>Dominio</th>
                <th>M치scara de red</th>
                <th>IP fija externa</th>
                <th>DNS1</th>
                <th>DNS2</th>
                <th>Empresa</th>
                <th class="no">Opciones</th>
            </tr>
        </thead>
        <tbody>
            {% for confiRed in confiRedes %}
            <tr>
                <td>{{ confiRed.dominio }}</td>
                <td>{{ confiRed.mascaraRed }}</td>
                <td>{{ confiRed.ipFijaExt }}</td>
                <td>{{ confiRed.dns1 }}</td>
                <td>{{ confiRed.dns2 }}</td>
                <td>{{ confiRed.empresa }}</td>
                <td>
                    {% if is_granted('CONFIRED_VER', confiRed) %}
                        <a href="{{ path('confired_detalles', {'id': confiRed.id}) }}" title="Ver detalles" class="icono"><i class="far fa-eye"></i> </a>
                    {% endif %}
                    {% if is_granted('CONFIRED_EDITAR', confiRed) %}
                        <a href="{{ path('confired_editar', {'id': confiRed.id}) }}" title="Editar configuraci칩n" class="icono"><i class="fas fa-pencil-alt"></i></a>
                    {% endif %}
                    {% if is_granted('ROLE_ADMIN')%}
                        <a href="{{ path('confired_eliminar', {'id': confiRed.id}) }}" title="Eliminar configuraci칩n" class="icono"><i class="fa fa-trash"></i></a>
                    {% endif %}
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
    {% else %}
        <p>No hay configuraciones que mostrar</p>
    {% endif %}
{% endblock %}
