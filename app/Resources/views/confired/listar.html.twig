{% extends 'layout.html.twig' %}

{% block title %}Configuraciones de red{% endblock %}

{% block content %}
    <div class="well encabezado">
        <h1>Listado de configuraciones de red</h1>
        {% if is_granted('CONFIRED_CREAR') %}
            <a href="{{ path('confired_crear') }}" class="btn btn-success"><i class="fa fa-plus"></i> Nueva configuración de red</a>
        {% endif %}
    </div>

    {% if confiRedes is defined and confiRedes is not empty %}
    <table class="table table-bordered table-hover table-striped dt">
        <thead>
            <tr>
                <th>Dominio</th>
                <th>Máscara de red</th>
                <th>IP fija externa</th>
                <th>DNS1</th>
                <th>DNS2</th>
                <th>Empresa</th>
                <th class="no">Opciones</th>
            </tr>
        </thead>
        <tbody>
            {% for confi in confiRedes %}
            <tr>
                <td>{{ confi.dominio }}</td>
                <td>{{ confi.mascaraRed }}</td>
                <td>{{ confi.ipFijaExt }}</td>
                <td>{{ confi.dns1 }}</td>
                <td>{{ confi.dns2 }}</td>
                <td>{{ confi.empresa }}</td>
                <td>
                    {% if is_granted('CONFIRED_EDITAR', confi) %}
                        <a href="{{ path('confired_editar', {'id': confi.id}) }}" title="Editar configuración" class="icono"><i class="fas fa-pencil-alt"></i></a>
                    {% endif %}
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
    {% else %}
        <p>No hay configuraciones que mostrar</p>
    {% endif %}
{% endblock %}
