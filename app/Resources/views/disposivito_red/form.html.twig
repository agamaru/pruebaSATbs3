{% extends 'layout.html.twig' %}

{% form_theme formulario 'form/form_row.html.twig' %}

{% block title %}Dispositivo de red{% endblock %}

{% block content %}
    <div class="col-sm-9 col-sm-offset-3">
        {% if dispositivo.id %}
            <h1>Datos del dispotivo de red</h1>
        {% else %}
            <h1>Nuevo dispositivo de red</h1>
        {% endif %}
    </div>
    {# Pendiente solucionar el tema del encabezado #}

    {{ form_start(formulario, {'attr': {'novalidate': 'novalidate'}}) }}
    {{ form_widget(formulario) }}

    <div class="form-group row">
        <div class="col-sm-9 col-sm-offset-3">
            <p>* Los campos marcados son obligatorios</p>
            <a href="{{ path('dispositivo_listar') }}" class="btn btn-primary"><i class="fa fa-arrow-left"></i> Volver al listado de dispositivos de red</a>
            {% if is_granted('DISPOSITIVO_RED_CREAR') or (dispositivo.id and is_granted("DISPOSITIVO_RED_EDITAR", dispositivo))%}
            <button type="submit" class="btn btn-success">Guardar cambios</button>
            {% endif %}
            {% if dispositivo.id and is_granted("DISPOSITIVO_RED_ELIMINAR", dispositivo)%}
                <a href="{{ path('dispositivo_eliminar', {'id': dispositivo.id}) }}" class="btn btn-danger"><i class="fa fa-trash"></i> Eliminar</a>
            {% endif %}
        </div>
    </div>
    {{ form_end(formulario) }}

{% endblock %}